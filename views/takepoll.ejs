<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Decision Maker - Take Poll</title>
    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous" />
    <link rel="stylesheet" href="/styles/new.css" type="text/css" />
    <link rel="stylesheet" href="/styles/_header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=PT+Sans|PT+Serif" rel="stylesheet">

    <!-- External JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="http://rubaxa.github.io/Sortable/Sortable.js"></script>

    <!-- App JS -->
    <script type="text/javascript" src="/scripts/poll-effect.js"></script>
    <script type="text/javascript" src="/scripts/vote-submit.js"></script>

  </head>
  <body>
    <header>
      <% include partials/_header %>
    </header>
    <main id="poll-container">
      <section id="polloptions">
        <h1 class="question"><%= result.question %></h1>
        <ul id="poll-block-list" class="list-unstyled" data-question-id="<%=result.question_id%>">
          <% result.choices.forEach((row) => { %>
            <li data-choice-id="<%= row.choice_id %>"><%= row.choice_name %><small><%= row.description %></small></li>
          <% }); %>
        </ul>
      </section>
      <div id="poll-vote-confirm">
        <strong>Please confirm your email:</strong>
        <input id="email-confirm" type="email"></input>
        <button id="poll-vote-submit" type="submit">Submit</button>
      </div>
    </main>
  </body>
</html>
